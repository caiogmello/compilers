/* recognize tokens for the calculator */ 

%option noyywrap nodefault yylineno
%{
#include "e7.tab.h"

void yyerror(char *s, ...);
%}

%%

"+" 	{ return PLUS; }
"-" 	{ return MINUS; }
"*" 	{ return TIMES; }
"(" 	{ return OPENP; } 
")" 	{ return CLOSEP; } 

[0-9]+ 	{ yylval = atoi(yytext); return NUMBER; }  /* fazer convers√£o para int aqui */
[ \t] 	{ /* ignore white space */ }
\n      { return EOL; }
.   	{ return ERROR; }
%%

